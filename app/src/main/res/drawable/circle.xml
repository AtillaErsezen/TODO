<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Outer ring -->
            <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/red" />
                    <stroke
                        android:width="2dp"
                        android:color="#FF000000" />
                </shape>
            </item>
            <!-- Inner dot -->
            <item android:top="7dp" android:right="7dp" android:bottom="7dp" android:left="7dp">
                <shape
                    android:shape="oval">
                    <solid android:color="#FF000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked state -->
    <item>
        <layer-list>
            <!-- Outer ring -->
            <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/red" />
                    <stroke
                        android:width="2dp"
                        android:color="#FF000000" />
                </shape>
            </item>
            <!-- Inner dot (hidden in unchecked state) -->
            <item android:top="7dp" android:right="7dp" android:bottom="7dp" android:left="7dp">
                <shape
                    android:shape="oval">
                    <solid android:color="#00000000" /> <!-- Transparent color -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
